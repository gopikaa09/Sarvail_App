{
  "expo": {
    "name": "Sarvail",
    "slug": "Sarvail",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "sarvail",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logoSarvail.png",
      "resizeMode": "contain",
      "backgroundColor": "#161622"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/SarvailApkLogo.png",
        "backgroundColor": "#161622"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.galaxies.firebase",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "8902ef78-08e2-4be4-a817-fa779fafe6a4"
      }
    }
  }
}
